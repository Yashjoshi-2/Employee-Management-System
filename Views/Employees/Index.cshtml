@model IEnumerable<EmployeeManagementSystem.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<h2>Employee List</h2>

<table>
    <thead>
        <tr>
            <th>Name</th><th>Position</th><th>Salary</th><th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Position</td>
            <td>@emp.Salary</td>
            <td>
                <a href="/Employees/Details/@emp.Id">View</a> |
                <a href="/Employees/Edit/@emp.Id">Edit</a> |
                <a href="/Employees/Delete/@emp.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="/Employees/Create">Add New Employee</a>
